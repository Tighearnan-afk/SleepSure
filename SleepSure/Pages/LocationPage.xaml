                                    <Label Text="{Binding Description}"
                                           TextColor="{AppThemeBinding Light={StaticResource White},Dark={StaticResource White}}"
                                           Grid.Column="1"
                                           Grid.Row="3" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView ItemsSource="{Binding HumiditySensors}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:HumiditySensor">
                            <Border Stroke="{AppThemeBinding Light={StaticResource Primary},Dark={StaticResource PrimaryDark}}"
                                    StrokeThickness="0.4"
                                    Margin="10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary},Dark={StaticResource PrimaryDark}}"
                                    HeightRequest="100"
                                    WidthRequest="{OnIdiom Desktop=500,Phone=350}">
                                <Border.StrokeShape>
