                                      Margin="10">

                                    <Image Grid.Row="0"
                                           Grid.Column="0"
                                           Grid.RowSpan="4"
                                           Margin="0,0,10,0">
                                        <Image.Source>
                                            <FontImageSource FontFamily="MaterialRounded"
                                                             Glyph="{x:Static m:MaterialRounded.Humidity_percentage}"
                                                             Color="{AppThemeBinding Light={StaticResource Black},Dark={StaticResource Black}}"
                                                             Size="{OnIdiom Default=100, Phone=25}" />
