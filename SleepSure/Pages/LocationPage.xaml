                                                                    Path=GoToDeviceDetailsCommand}"
                                                          NumberOfTapsRequired="1" />
                                </Border.GestureRecognizers>
                                <Grid ColumnDefinitions="*,3*"
                                      RowDefinitions="*,*,*,*"
                                      Margin="10">

                                    <Image Grid.Row="0"
                                           Grid.Column="0"
                                           Grid.RowSpan="4"
                                           Margin="0,0,10,0">
                                        <Image.Source>
                                            <FontImageSource FontFamily="MaterialRounded"
                                                             Glyph="{x:Static m:MaterialRounded.Water_damage}"
                                                             Color="{AppThemeBinding Light={StaticResource Black},Dark={StaticResource Black}}"
                                                             Size="{OnIdiom Default=100, Phone=25}" />
                                        </Image.Source>
                                    </Image>

                                    <Label Text="{Binding Name}"
                                           TextColor="{AppThemeBinding Light={StaticResource White},Dark={StaticResource White}}"
                                           Grid.Column="1"
                                           Grid.Row="0" />

                                    <Label Text="{Binding PowerStatus}"
                                           TextColor="{AppThemeBinding Light={StaticResource White},Dark={StaticResource White}}"
                                           Grid.Column="1"
                                           Grid.Row="1" />

                                    <Label Text="{Binding LeakDetected}"
                                           TextColor="{AppThemeBinding Light={StaticResource White},Dark={StaticResource White}}"
                                           Grid.Column="1"
                                           Grid.Row="2" />

                                    <Label Text="{Binding Description}"
                                           TextColor="{AppThemeBinding Light={StaticResource White},Dark={StaticResource White}}"
                                           Grid.Column="1"
                                           Grid.Row="3" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView ItemsSource="{Binding DoorSensors}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:DoorSensor">
                            <Border Stroke="{AppThemeBinding Light={StaticResource Primary},Dark={StaticResource PrimaryDark}}"
